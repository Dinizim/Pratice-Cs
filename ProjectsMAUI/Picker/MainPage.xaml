<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localnamespace="clr-namespace:Picker"
             x:Class="Picker.MainPage">
    
    <ContentPage.BindingContext>
        <localnamespace:Picker/>
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Entry
                x:Name="entry"
                Placeholder="Enter Hex Color"
                Text="{Binding ColorName}"
                />

            <Label
                Text="{Binding ColorSelected}"
                FontSize="32"
                />  
            <BoxView
                Color="{Binding BoxColor}"
                CornerRadius="10"
                WidthRequest="160"
                HeightRequest="160"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                />

           
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
